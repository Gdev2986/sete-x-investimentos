{
  "compilerOptions": {
    "typeRoots": [
      "./node_modules/@types"
    ],
    "target": "es6",
    "lib": [
      "es6",
      "dom",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "jsx": "react"
  },
  "include": [
    "./backend/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "public",
    "src"
  ]
}
